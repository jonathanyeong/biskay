<ul role="listbox" class="py-1">
  <% actors.each_with_index do |actor, index| %>
    <li role="option"
        class="px-4 py-2 hover:bg-gray-100 cursor-pointer flex items-center"
        data-action="click->skeets#selectUser"
        data-user-handle="<%= actor["handle"] %>">
      <img src="<%= actor["avatar"] %>"
           alt="<%= actor["displayName"] %>"
           class="w-8 h-8 rounded-full mr-3">
      <div>
        <div class="font-medium"><%= actor["displayName"] %></div>
        <div class="text-sm text-gray-500">@<%= actor["handle"] %></div>
      </div>
    </li>
  <% end %>
</ul>